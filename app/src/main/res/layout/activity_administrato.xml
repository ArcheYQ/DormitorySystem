<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout"
    tools:context="com.example.administrator.dormitorysystem.activity.AdministratoActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="230dp" />
            <android.support.v7.widget.Toolbar
                android:layout_marginTop="20dp"
                android:id="@+id/tb_administrato"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                >
                <TextView
                    android:textSize="15sp"
                    android:text="宿舍管理系统"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.Toolbar>
        </FrameLayout>

        <Button
            android:id="@+id/bu_find"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:text="信息查询"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bu_notice"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="公告管理"
            android:layout_width="160dp"
            android:layout_height="40dp" />
        <Button
            android:id="@+id/bu_repair"
            android:textColor="#6a7e80"
            android:background="@drawable/check_border_all"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="报修情况"
            android:layout_width="160dp"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/bu_comment"
            android:layout_width="160dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/check_border_all"
            android:text="留言板"
            android:textColor="#6a7e80" />
    </LinearLayout>
    <include layout="@layout/include_administrato_info" />
</android.support.v4.widget.DrawerLayout>
