<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_public_notice"
        android:background="@color/white"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_height="45dp">
        <TextView
            android:textColor="@color/share_text"
            android:textSize="15sp"
            android:text="发布通知"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/et_add_notice_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="15dp"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:hint="标题"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="5dp"/>

    <EditText
        android:id="@+id/et_add_notice_content"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:textSize="15dp"
        android:hint="内容"
        android:gravity="left"
        android:paddingTop="5dp"/>

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_weight="1"
        android:id="@+id/ed_add_notice_date"
        android:hint="时间"
        android:layout_width="0dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_add_notice_author"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="end"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:hint="author"/>
</LinearLayout>

    <Button
        android:id="@+id/btn_add_notice"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/check_border_setting_all"
        android:text="发布通知"
        android:textColor="@color/white" />

</LinearLayout>
