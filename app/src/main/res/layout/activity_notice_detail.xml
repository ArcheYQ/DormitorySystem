<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_detail_notice"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:elevation="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="通知详情"
            android:textColor="@color/share_text"
            android:textSize="15sp" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/et_detail_notice_title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="标题"
        android:textSize="15dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="3px"
        android:layout_marginLeft="5dp" />

    <TextView
        android:id="@+id/et_detail_notice_tcontent"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginLeft="5dp"
        android:background="@color/white"
        android:gravity="center"
        android:hint="内容"
        android:paddingTop="5dp"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/et_detail_notice_time"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_access_time_black_24dp"
            android:paddingLeft="20dp"
            android:text="2017/12/20" />

        <TextView
            android:id="@+id/et_detail_notice_author"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginEnd="20dp"
            android:padding="3dp"
            android:layout_margin="5dp"
            android:drawableEnd="@drawable/ic_assignment_ind_black_24dp"
            android:paddingEnd="10dp"
            android:text="reoger" />
    </LinearLayout>


</LinearLayout>
